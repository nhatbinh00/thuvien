
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/layout.cshtml";
}
<h2 class="text-center text-dark" style="margin:150px 0px 50px 0px;">Search Result</h2>
<table class="table table-hover">
    <thead>
        <tr class="text-dark">
            <th>Mã Sách</th>
            <th>Tên Sách</th>
            <th>Nhà Xuất Bản</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Sach)
        {
            <tr class="table-primary my-2 text-dark">
                <td>@item.MaSach</td>
                <td>@item.TenSach</td>
                <td>@item.NhaXuatBan</td>
                <td>@item.Gia</td>
            </tr>
        }

    </tbody>
</table>
